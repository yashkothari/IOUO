<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/edtDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:ems="10" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtDetails"
        android:layout_alignLeft="@+id/edtDetails"
        android:layout_marginBottom="40dp"
        android:ems="10" />

    <EditText
        android:id="@+id/edtCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtName"
        android:layout_alignLeft="@+id/edtName"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:inputType="phone" >

        <requestFocus />

    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edtName"
        android:layout_alignRight="@+id/textView1"
        android:text="*Name:"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edtDetails"
        android:layout_alignRight="@+id/textView2"
        android:text="Details:"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edtCost"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/edtCost"
        android:text="*Amount:"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/edtDetails"
        android:layout_below="@+id/edtDetails"
        android:layout_marginTop="64dp"
        android:text="DONE" />

</RelativeLayout>
